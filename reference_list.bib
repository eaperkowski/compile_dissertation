journal = {Nature Plants},
month = {apr},
number = {4},
pages = {341--345},
title = {{Convergence in water use efficiency within plant functional types across contrasting climates}},
url = {https://www.nature.com/articles/s41477-022-01131-z},
volume = {8},
year = {2022}
}
