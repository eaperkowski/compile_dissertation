issn = {0269-8463},
journal = {Functional Ecology},
keywords = {China,N2O emission,nitrogen deposition,nitrogen mineralization and nitrifica-,nitrogen saturation,phosphorus addition,tion,tropical forest},
month = {feb},
number = {2},
pages = {305--313},
title = {{Nitrogen saturation in humid tropical forests after 6 years of nitrogen and phosphorus addition: hypothesis testing}},
url = {https://onlinelibrary.wiley.com/doi/10.1111/1365-2435.12475},
volume = {30},
