issn = {2150-8925},
journal = {Ecosphere},
keywords = {Bacteria,Climate change,ESA centennial paper,Ecosystem,Fungi,Microbial community,Microbiome,Plant-microbe interaction,Plant-soil feedbacks,Rhizosphere,Soil,Warming},
month = {aug},
number = {8},
pages = {art130},
title = {{Direct and indirect effects of climate change on soil microbial and soil microbial-plant interactions: What lies ahead?}},
url = {http://doi.wiley.com/10.1890/ES15-00217.1},
volume = {6},
