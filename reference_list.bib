doi = {10.1111/gcb.13504},
file = {:Users/eaperkowski/mendeley_paperpile/Knapp et al. - 2017 - Pushing precipitation to the extremes in distributed experiments recommendations for simulating wet and dry years.pdf:pdf},
issn = {13652486},
journal = {Global Change Biology},
keywords = {climate extremes,drought,field experiments,precipitation regimes,wet years},
number = {5},
pages = {1774--1782},
pmid = {27633752},
title = {{Pushing precipitation to the extremes in distributed experiments: recommendations for simulating wet and dry years}},
volume = {23},
year = {2017}
