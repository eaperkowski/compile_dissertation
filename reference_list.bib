file = {:Users/eaperkowski/mendeley_paperpile/Prada, Turner, Dalling - 2022 - Growth responses of ectomycorrhizal and arbuscular mycorrhizal seedlings to low soil nitrogen availabili.pdf:pdf},
issn = {13652435},
journal = {Functional Ecology},
keywords = {1,c ti o n,i ntro d u,mycorrhiza,nitrogen,oak forest,panama,plant,seedling growth,soil feedbacks},
number = {1},
pages = {107--119},
title = {{Growth responses of ectomycorrhizal and arbuscular mycorrhizal seedlings to low soil nitrogen availability in a tropical montane forest}},
