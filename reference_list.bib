doi = {10.1146/annurev-environ-102017-030204},
issn = {1543-5938},
journal = {Annual Review of Environment and Resources},
month = {oct},
number = {1},
pages = {219--243},
title = {{The Terrestrial Carbon Sink}},
url = {https://www.annualreviews.org/doi/10.1146/annurev-environ-102017-030204},
volume = {43},
year = {2018}
}
