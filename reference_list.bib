issn = {1726-4189},
journal = {Biogeosciences},
month = {mar},
number = {5},
pages = {1491--1518},
title = {{Variability of projected terrestrial biosphere responses to elevated levels of atmospheric CO<sub>2</sub> due to uncertainty in biological nitrogen fixation}},
