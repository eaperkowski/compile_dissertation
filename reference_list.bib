doi = {10.1046/j.1442-9993.2003.01315.x},
file = {:Users/eaperkowski/mendeley_paperpile/P{\'{e}}rez et al. - 2003 - Litterfall dynamics and nitrogen use efficiency in two evergreen temperate rainforests of southern Chile.pdf:pdf},
issn = {14429985},
