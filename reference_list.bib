doi = {10.1111/gcb.15924},
file = {:Users/eaperkowski/mendeley_paperpile/Lavergne et al. - 2022 - Global decadal variability of plant carbon isotope discrimination and its link to gross primary production.pdf:pdf},
issn = {13652486},
journal = {Global Change Biology},
keywords = {JULES model,carbon isotope discrimination,forest ecosystems,gross primary production,land carbon uptake,tree rings},
number = {2},
pages = {524--541},
pmid = {34626040},
title = {{Global decadal variability of plant carbon isotope discrimination and its link to gross primary production}},
