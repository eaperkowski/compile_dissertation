journal = {Journal of the American Society for Horticultural Science},
month = {jul},
number = {4},
pages = {373--380},
title = {{Photosynthetic acclimation, biomass allocation, and water use efficiency of garlic in response to carbon dioxide enrichment and nitrogen fertilization}},
