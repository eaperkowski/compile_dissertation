month = {jul},
number = {2},
pages = {365--375},
title = {{The nitrogen economic spectrum of legume stoichiometry and fixation strategy}},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/nph.16543},
volume = {227},
