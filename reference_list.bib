keywords = {Belowground carbon allocation,Climate change,Forest ecosystems,Global warming,Heterotrophic respiration,Nitrogen deposition,Root respiration,Soil respiration},
number = {5},
pages = {1674--1684},
pmid = {24847507},
title = {{Allometric constraints on, and trade-offs in, belowground carbon allocation and their control of soil respiration across global forest ecosystems}},
