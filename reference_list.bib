file = {:Users/eaperkowski/mendeley_paperpile/Z{\'{u}}{\~{n}}iga-Gonz{\'{a}}lez et al. - 2016 - Soluble carbohydrate content variation in Sanionia uncinata and Polytrichastrum alpinum, two Antarcti.pdf:pdf},
issn = {07176287},
journal = {Biological Research},
keywords = {Antarctic vegetation,Antarctica,Bryophytes,Sugars},
number = {1},
pages = {1--9},
pmid = {26823072},
