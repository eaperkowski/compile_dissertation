file = {:Users/eaperkowski/mendeley_paperpile/Kaschuk_2009_photosynthesis_Csink_rhizobia_AMF.pdf:pdf},
issn = {00380717},
journal = {Soil Biology and Biochemistry},
keywords = {Harvest index,Legume,Photosynthetic nutrient use efficiency,Pi recycling,Sink stimulation of photosynthesis,Source-sink regulation,Starch,Sucrose},
month = {jun},
number = {6},
pages = {1233--1244},
title = {{Are the rates of photosynthesis stimulated by the carbon sink strength of rhizobial and arbuscular mycorrhizal symbioses?}},
url = {https://linkinghub.elsevier.com/retrieve/pii/S0038071709000935},
