journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Carbon cycle,Carbon-13 Suess effect,Isotope,Photosynthesis,Water use efficiency},
number = {39},
pages = {10361--10366},
pmid = {28893986},
title = {{Atmospheric evidence for a global secular increase in carbon isotopic discrimination of land photosynthesis}},
volume = {114},
year = {2017}
