doi = {10.1111/1365-2745.12940},
file = {:Users/eaperkowski/mendeley_paperpile/Dovrat et al. - 2018 - Drought-adapted plants dramatically downregulate dinitrogen fixation Evidences from Mediterranean legume shrubs.pdf:pdf},
