file = {:Users/eaperkowski/mendeley_paperpile/Berdugo et al. - 2022 - Ecological mechanisms underlying aridity thresholds in global drylands.pdf:pdf},
issn = {13652435},
journal = {Functional Ecology},
keywords = {2,4,6,fernando t,maestre 5,ricard v,sol{\'{e}} 1},
