issn = {0045-5067},
journal = {Canadian Journal of Forest Research},
keywords = {critical load,forest ecosystem model,nitrate leaching,nitrogen deposition,tree species},
month = {aug},
number = {8},
pages = {997--1009},
title = {{Effects of nitrogen deposition on nitrate leaching from forests of the northeastern United States will change with tree species composition}},
url = {http://www.nrcresearchpress.com/doi/10.1139/cjfr-2016-0529},
volume = {47},
