file = {:Users/eaperkowski/mendeley_paperpile/Sage, Kubien - 2007 - The temperature response of C3 and C4 photosynthesis.pdf:pdf},
issn = {01407791},
journal = {Plant, Cell & Environment},
month = {sep},
number = {9},
pages = {1086--1106},
title = {{The temperature response of C3 and C4 photosynthesis}},
url = {https://onlinelibrary.wiley.com/doi/10.1111/j.1365-3040.2007.01682.x},
volume = {30},
