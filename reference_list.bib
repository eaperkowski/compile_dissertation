file = {:Users/eaperkowski/mendeley_paperpile/Lavergne_2020_soilWaterStress_stomatalLimitation_chi_beta.pdf:pdf},
issn = {13652486},
journal = {Global Change Biology},
keywords = {drought,leaf-internal CO2,least-cost hypothesis,leaves,optimality,stable carbon isotopes,tree rings,water use strategies},
number = {12},
