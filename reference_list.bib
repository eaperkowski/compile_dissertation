keywords = {15N recovery rate,C/N accumulation,C/N partitioning,Triticum aestivum L,arbuscular mycorrhiza,nitrogen use efficiency},
month = {feb},
number = {2},
pages = {133--140},
title = {{Arbuscular mycorrhiza improve growth, nitrogen uptake, and nitrogen use efficiency in wheat grown under elevated CO2}},
url = {http://link.springer.com/10.1007/s00572-015-0654-3},
volume = {26},
