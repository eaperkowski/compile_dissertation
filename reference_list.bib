author = {Corr{\^{e}}a, Ana and Strasser, Reto J and Martins-Lou{\c{c}}{\~{a}}o, M A},
doi = {10.1007/s00572-008-0195-0},
file = {:Users/eaperkowski/mendeley_paperpile/Corr{\^{e}}a, Strasser, Martins-Lou{\c{c}}{\~{a}}o - 2008 - Response of plants to ectomycorrhizae in N-limited conditions which factors determine its v.pdf:pdf},
issn = {0940-6360},
journal = {Mycorrhiza},
keywords = {O-J-I-P test,ammonium,chlorophyll a fluorescence,colonization density,cost-benefit,demand-supply,ectomycorrhizae,mycorrhizal response,nitrogen},
month = {oct},
number = {8},
pages = {413--427},
title = {{Response of plants to ectomycorrhizae in N-limited conditions: which factors determine its variation?}},
