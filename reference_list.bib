journal = {Global Change Biology},
keywords = {arbuscular mycorrhizal fungi,climate change,drought,nitrogen leaching,nutrient uptake},
month = {jan},
number = {1},
pages = {e171--e182},
title = {{Mycorrhizal fungi enhance plant nutrient acquisition and modulate nitrogen loss with variable water regimes}},
