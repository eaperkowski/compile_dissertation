issn = {1810-6285},
journal = {Biogeosciences Discussions},
month = {mar},
number = {3},
pages = {3173--3232},
title = {{Nutrient limitation reduces land carbon uptake in simulations with a model of combined carbon, nitrogen and phosphorus cycling}},
