@article{Cornwell2018,
abstract = {Aim: Within C 3 plants, photosynthesis is a balance between CO2 supply from the atmosphere via stomata and demand by enzymes within chloroplasts. This process is dynamic and a complex but crucial aspect of photosynthesis. We sought to under‐ stand the spatial pattern in CO2 supply–demand balance on a global scale, via analysis of stable isotopes of carbon within leaves ($\Delta$13 C), which provide an integra‐ tive record of CO2 drawdown during photosynthesis. Location: Global. Time period: 1951–2011. Major taxa studied: Vascular plants. Methods: We assembled a database of leaf carbon isotope ratios containing 3,979 species–site combinations from across the globe, including 3,645 for C 3 species. We examined a wide array of potential climate and soil drivers of variation in $\Delta$13 C. Results: The strongest drivers of carbon isotope discrimination at the global scale included atmospheric pressure, potential evapotranspiration and soil pH, which ex‐ plained 44% of the variation in $\Delta$13 C. Addition of eight more climate and soil variables (each explaining small but highly significant amounts of variation) increased the ex‐ plained variation to 60%. On top of this, the largest plant trait effect was leaf nitrogen per area, which explained 11% of $\Delta$13 C variation. Main conclusions: By considering variation in $\Delta$13 C at a considerably larger scale than previously, we were able to identify and quantify key drivers in CO2 supply–demand balance previously unacknowledged. Of special note is the key role of soil properties, with greater discrimination on low‐pH and high‐silt soils. Unlike other plant traits, which show typically wide variation within sets of coexisting species, the global pattern in carbon stable isotope ratios is much more conservative; there is relatively narrow variation in time‐integrated CO2 concentrations at the site of carboxylation among plants in a given soil and climate.},
author = {Cornwell, William K and Wright, Ian J and Turner, Joel and Maire, Vincent and Barbour, Margaret M and Cernusak, Lucas A and Dawson, Todd E and Ellsworth, David S and Farquhar, Graham D and Griffiths, Howard and Keitel, Claudia and Knohl, Alexander and Reich, Peter B and Williams, David G and Bhaskar, Radika and Cornelissen, Johannes H C and Richards, Anna and Schmidt, Susanne and Valladares, Fernando and K{\"{o}}rner, Christian and Schulze, Ernst-Detlef and Buchmann, Nina and Santiago, Louis S},
doi = {10.1111/geb.12764},
file = {:Users/eaperkowski/mendeley_paperpile/Cornwell et al. - 2018 - Climate and soils together regulate photosynthetic carbon isotope discrimination within Csub3sub plants worldwi.pdf:pdf},
issn = {1466822X},
journal = {Global Ecology and Biogeography},
