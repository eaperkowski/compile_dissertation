author = {Hikosaka, Kouki and Shigeno, Aki},
doi = {10.1007/s00442-009-1315-z},
file = {:Users/eaperkowski/mendeley_paperpile/Hikosaka, Shigeno - 2009 - The role of Rubisco and cell walls in the interspecific variation in photosynthetic capacity.pdf:pdf},
